<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Note</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS file -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet"> <!-- Quill's CSS -->
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Edit Note</h1>

    <form action="/update-note/<%= note._id %>" method="POST"> <!-- Ensure this line is correct -->
        <input type="text" name="title" placeholder="Title" value="<%= note.title %>" required> <!-- Title input -->
        <div id="editor" style="height: 100px;"></div> <!-- Quill editor container -->
        <input type="hidden" name="content" id="content" required> <!-- Hidden field to store content -->
        <button type="submit">Update Note</button>
    </form>

    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script>
        // Initialize Quill editor
        var quill = new Quill('#editor', {
            theme: 'snow', // Specify theme
            modules: {
                toolbar: [
                    ['bold', 'italic', 'underline'], // toggled buttons
                    ['link', 'image'], // link and image
                    [{ list: 'ordered' }, { list: 'bullet' }], // lists
                    ['clean'] // remove formatting button
                ]
            }
        });

        // Set Quill editor content to the existing note content
        quill.root.innerHTML = `<%- note.content %>`; // Ensure this line is correct

        // On form submission, set the hidden content field with Quill's HTML
        document.querySelector('form').onsubmit = function() {
            var content = document.querySelector('#content');
            content.value = quill.root.innerHTML; // Get HTML from Quill
        };
    </script>
</body>
</html>